<%= render "layouts/navbar" %>
<%= stylesheet_link_tag 'dashboard.css' %>

<script>$(document).ready(function() {
    feather.replace()
});</script>

<div class="container-fluid d-md-none">
  <nav class="tabbable">
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <% if current_page?(dashboard_path) or current_page?(dashboard_index_path)%>
        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="<%= dashboard_url %>" role="tab" aria-controls="nav-home" aria-selected="true"><span data-feather="home"></span> Panel de Control</a>
      <% else %>
        <a class="nav-item nav-link" id="nav-home-tab" data-toggle="tab" href="<%= dashboard_url %>" role="tab" aria-controls="nav-home" aria-selected="false"><span data-feather="home"></span> Panel de Control</a>
