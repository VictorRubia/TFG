      <% if current_page?(dashboard_create_patient_path)%>
        <a class="nav-item nav-link active" id="nav-profile-tab" data-toggle="tab" href="<%= dashboard_create_patient_url %>" role="tab" aria-controls="nav-profile" aria-selected="true"><span data-feather="users"></span> Pacientes</a>
      <% else %>
        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="<%= dashboard_create_patient_url %>" role="tab" aria-controls="nav-profile" aria-selected="true"><span data-feather="users"></span> Pacientes</a>
      <% end %>
      <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false"><span data-feather="bar-chart-2"></span> Informes</a>
    </div>
  </nav>
</div>

