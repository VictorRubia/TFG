<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Añadir Paciente</h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
<%= form_with model: patient, url: patients_path, method: :post, local: true, scope: :patient do |form| %>
  <div class="mb-3">
    <%= form.label 'Nombre', style: "col-form-label" %>
    <%= form.text_field :name, :class => 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label 'Apellidos', style: "col-form-label" %>
    <%= form.text_field :surname, :class => 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label 'Nombre de usuario', style: "col-form-label" %>
    <%= form.text_field :username, :class => 'form-control'%>
  </div>

  <div class="mb-3">
    <%= form.label 'Contraseña', style: "col-form-label" %>
    <%= form.text_field :password_hash, :class => 'form-control' %>
  </div>
</div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    <%= form.submit 'Añadir', :class => 'btn btn-success' %>
  </div>
<% end %>